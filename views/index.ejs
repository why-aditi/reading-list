<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>
    <h1>Books List</h1>
    <ul>
        <% books.forEach(book => { %>
            <li><strong>Title:</strong> <%= book.title %>, <strong>Author:</strong> <%= book.author %>, <strong>Edition:</strong> <%= book.edition %>, <strong>Cover ID:</strong> <%= book.cover_id %></li>
        <% }) %>
    </ul>

    <h2>Add a New Book</h2>
    <form action="/add-book" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" required><br>
        <button type="submit">Add Book</button>
    </form>
</body>
</html>
